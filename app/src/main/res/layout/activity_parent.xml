<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk"
    tools:context=".parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="154dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="452dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icguide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.53" />

    <TextView
        android:id="@+id/pagetitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:layout_marginBottom="380dp"
        android:text="@string/welcome"
        android:textColor="#172646"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.65999997" />

    <Button
        android:id="@+id/btnhome"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:width="330dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:text="@string/homepage"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_account2"
        app:layout_constraintVertical_bias="0.326" />

    <Button
        android:id="@+id/btnlogin3"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:width="330dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:text="@string/login_input"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_account2"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/btn_create_account2"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:width="330dp"
        android:background="@drawable/background_button"
        android:elevation="1dp"
        android:gravity="center"
        android:text="@string/create_account"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.622" />
</android.support.constraint.ConstraintLayout>